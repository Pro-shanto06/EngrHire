          <div id="bid-form" style="display: none;">
          <form action="/submit-bid/{{job._id}}" method="POST">
         
            <input type="hidden" name="engineerId" value="{{engineerId}}" />
        
            <div class="form-group">
              <label for="bidAmount">Bid Amount ($):</label>
              <input type="number" id="bidAmount" name="bidAmount" required />
            </div>
            <div class="form-group">
              <label for="bidDetails">Bid Details:</label>
              <textarea id="bidDetails" name="bidDetails" rows="4" required></textarea>
            </div>
            <button class="fbutton" type="submit">Submit Bid</button>
          </form>
        </div>
        
 {{#if isEngineer}}
  {{#if hasSubmittedBid}}
    <div class="button-container">
      <p>You have already submitted a bid</p>
    </div>
  {{else}}
    <div class="button-container">
      <button id="bid-now-btn" onclick="showBidForm()">Bid Now</button>
    </div>
  {{/if}}
{{/if}}



  

    <script>
      function showBidForm() {
         
        const bidForm = document.getElementById('bid-form');
        const bidButton = document.getElementById('bid-now-btn');
        if (bidForm.style.display === 'none' || bidForm.style.display === '') {
          bidForm.style.display = 'block';
          bidButton.textContent = 'Cancel Bid';
        } else {
          bidForm.style.display = 'none';
          bidButton.textContent = 'Bid Now';
        }
      }
    </script>

   
