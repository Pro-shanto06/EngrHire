  <div class="post-job-container">
    <h1>Post a Job</h1>
    <!-- edit-job.hbs -->

    <form action="/edit-job/{{job._id}}" method="post">
      <div class="input-bx">
        <input type="text" id="job_title" name="job_title" value="{{job.jobTitle}}" required />
        <span>Title</span>
      </div>
      <div class="input-bx">
        <select id="category" name="category" required>
          <option value="Architect" {{#if (eq job.category 'Architect' )}}selected{{/if}}>Architect</option>
          <option value="Construction" {{#if (eq job.category 'Construction' )}}selected{{/if}}>Construction</option>

          <option value="Interior_Design" {{#if (eq job.category 'Interior_Design' )}}selected{{/if}}>Interior Design
          </option>
          <option value="Floor_Plan" {{#if (eq job.category 'Floor_Plan"' )}}selected{{/if}}>Floor Plan</option>
          <option value="Architectural_Design_And_Drafting" {{#if (eq job.category 'Architectural_Design_And_Drafting'
            )}}selected{{/if}}>Architectural Design And Drafting</option>
          <option value="Structural_Engineering" {{#if (eq job.category 'Structural_Engineering' )}}selected{{/if}}>
            Structural Engineering</option>
          <option value="Electrical_Installation" {{#if (eq job.category 'Electrical_Installation' )}}selected{{/if}}>
            Electrical Installation</option>
          <option value="Plumbing_and_Sanitary Works" {{#if (eq job.category 'Plumbing_and_Sanitary Works'
            )}}selected{{/if}}>Plumbing and Sanitary Works</option>
          <option value="Design_and_Decoration" {{#if (eq job.category 'Design_and_Decoration' )}}selected{{/if}}>Design
            and Decoration</option>
          <option value="Construction_Project_Management" {{#if (eq job.category 'Construction_Project_Management'
            )}}selected{{/if}}>Construction Project Management</option>
          <option value="Structural_Renovation_and_Retrofitting" {{#if (eq
            job.category 'Structural_Renovation_and_Retrofitting' )}}selected{{/if}}>Structural Renovation and
            Retrofitting</option>
          <option value="Building_Inspection_and_Code_Compliance" {{#if (eq
            job.category 'Building_Inspection_and_Code_Compliance' )}}selected{{/if}}>Building Inspection and Code
            Compliance</option>
        </select>
        <span>Category</span>
      </div>




      <div class="input-bx">
        <input type="text" id="specified_category" name="specified_category" value="{{job.specifiedCategory}}" />
        <span>Specify the category (If needed)</span>
      </div>

      <div class="input-bx">
        <textarea id="job_details" name="job_details" rows="5" required>{{job.jobDetails}}</textarea>
        <span>Details about the Job</span>
      </div>

      <div class="input-bx">
        <textarea id="job_requirements" name="job_requirements" rows="5" required>{{job.jobRequirements}}</textarea>
        <span>Job Requirements</span>
      </div>

      <div class="input-bx">
        <input type="text" id="job_location" name="job_location" value="{{job.jobLocation}}" required />
        <span>Job Location</span>
      </div>

      <div class="input-bx">
        <input type="date" id="job_deadline" name="job_deadline" value="{{formattedDate}}" required />
        <span class="eaea">Deadline</span>
      </div>





      <div class="input-bx">
        <input type="text" id="job_price_range" name="job_price_range" value="{{job.jobPriceRange}}" required />
        <span>Price</span>
      </div>

      <button type="submit">Update Job</button>
    </form>

  </div>


  <script>
    function toggleSearchButton() {
      var searchInput = document.getElementById('searchInput');
      var searchButton = document.getElementById('searchButton');


      searchButton.disabled = searchInput.value.trim() === '';
    }

    function validateSearch() {
      var searchInput = document.getElementById('searchInput');


      return searchInput.value.trim() !== '';
    }


  </script>

