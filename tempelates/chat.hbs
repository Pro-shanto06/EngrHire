    <section class="chat-section">
      <div class="brand">
        <h2>ChitChat</h2>
      </div>
      <div class="message-area" id="message-area">
      </div>
      <div class="messenger">
        <div id="textarea" contenteditable="true" placeholder="Chat here.."></div>
